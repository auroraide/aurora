             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:VerticalPanel>
        <g:HorizontalPanel>
            <g:Label>Description:</g:Label>
            <g:TextArea ui:field="messageField"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel>
            <g:Button ui:field="submitButton">SUBMIT</g:Button>
            <g:Button ui:field="cancelButton">CANCEL</g:Button>
        </g:HorizontalPanel>

    </g:VerticalPanel>
</ui:UiBinder>