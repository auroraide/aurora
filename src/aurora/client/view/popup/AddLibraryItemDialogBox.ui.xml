<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.server.PropertyCatalogFactory'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <g:VerticalPanel>
        <g:HorizontalPanel>
            <g:Label><ui:msg description="Add LibraryItem name">Name:</ui:msg></g:Label>
            <g:TextBox ui:field="nameField" focus="true"/>
            <g:Label ui:field="nameFieldError" visible="false"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel>
            <g:Label><ui:msg description="Add LibraryItem LambdaTerm">Lambda-Term:</ui:msg></g:Label>
            <g:TextBox ui:field="functionField"/>
            <g:Label ui:field="functionFieldError" visible="false"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel>
            <g:Label><ui:msg description="Add LibraryItem Desc">Description:</ui:msg></g:Label>
            <g:TextArea ui:field="descriptionField"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel>
            <g:Button ui:field="addButton" enabled="true"><ui:msg description="Add LibraryItem ADD">ADD</ui:msg></g:Button>
            <g:Button ui:field="cancelButton"><ui:msg description="Add LibraryItem CANCEL">CANCEL</ui:msg></g:Button>
        </g:HorizontalPanel>

    </g:VerticalPanel>
</ui:UiBinder>