<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:editor="urn:import:aurora.client.view.editor.components">


    <g:SplitLayoutPanel>

        <g:north size="120" unit="EM">
            <g:FlowPanel>
                <g:FlowPanel ui:field="inputField"/>
                <editor:ActionBar/>
            </g:FlowPanel>
        </g:north>

        <g:center>
            <g:FlowPanel>
                <g:Label>Ich bin das StepField</g:Label>
            </g:FlowPanel>
        </g:center>

        <g:south size="120" unit="EM">
            <g:FlowPanel>
                <g:Label>Ich bin das OutputField</g:Label>
            </g:FlowPanel>
        </g:south>


    </g:SplitLayoutPanel>

</ui:UiBinder>