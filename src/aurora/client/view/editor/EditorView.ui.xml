<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:editor="urn:import:aurora.client.view.editor.actionbar"
             ui:generateFormat='com.google.gwt.i18n.server.PropertyCatalogFactory'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">


    <g:SplitLayoutPanel>
        <!-- TODO: add title to input secion in editor (see GUI)-->
        <g:north size="120" unit="EM">
            <g:DockLayoutPanel unit="EM" ui:field="inputDockLayoutPanel">
                <g:south size="2">
                    <!-- TODO: center actionbar and lock it to input/step border-->
                    <editor:ActionBar ui:field="actionBar"/>
                </g:south>
            </g:DockLayoutPanel>
        </g:north>

        <g:center>
            <g:FlowPanel>
                <g:Label><ui:msg description="stepField Title">Steps</ui:msg></g:Label>
                <g:FlexTable ui:field="stepFieldTable"/>
            </g:FlowPanel>
        </g:center>

        <!-- TODO: output label overlay -->
        <g:south size="120" unit="EM">
            <g:DockLayoutPanel unit="EM" ui:field="outputDockLayoutPanel">
                
            </g:DockLayoutPanel>
        </g:south>


    </g:SplitLayoutPanel>

</ui:UiBinder>
