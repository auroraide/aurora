<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:editor="urn:import:aurora.client.view.editor.actionbar">


    <g:SplitLayoutPanel>

        <g:north size="120" unit="EM">
            <g:DockLayoutPanel unit="EM" ui:field="inputDockLayoutPanel">
                <g:south size="2">
                    <editor:ActionBar ui:field="actionBar"/>
                </g:south>
            </g:DockLayoutPanel>
        </g:north>

        <g:center>
            <g:FlowPanel>
                <g:Label>Ich bin das StepField</g:Label>
                <g:FlexTable ui:field="stepFieldTable"/>
            </g:FlowPanel>
        </g:center>

        <g:south size="120" unit="EM">
            <g:FlowPanel>
                <g:Label>Ich bin das OutputField</g:Label>
                <g:FlexTable ui:field="outputFieldTable"/>
            </g:FlowPanel>
        </g:south>


    </g:SplitLayoutPanel>

</ui:UiBinder>
