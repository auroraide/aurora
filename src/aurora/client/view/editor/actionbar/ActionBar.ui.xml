<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.server.PropertyCatalogFactory'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <g:FlowPanel addStyleNames="action_bar">
        <g:HTML ui:field="overlay">
            <div id="overlay"><img src="img/icons/icon_gear.png" alt="" class="gear" /></div>
        </g:HTML>
        <g:Button ui:field="runButton" addStyleNames="run"><ui:msg description="actionBar run">run</ui:msg></g:Button>
        <g:Button ui:field="pauseButton" addStyleNames="pause"><ui:msg description="actionBar pause">pause</ui:msg></g:Button>
        <g:Button ui:field="continueButton" addStyleNames="continue"><ui:msg description="actionBar continue">continue</ui:msg></g:Button>
        <g:Button ui:field="resetButton" addStyleNames="reset"><ui:msg description="actionBar reset">reset</ui:msg></g:Button>
        <g:Button ui:field="stepButton" addStyleNames="step disabled"><ui:msg description="actionBar step">step</ui:msg></g:Button>
    </g:FlowPanel>

</ui:UiBinder>