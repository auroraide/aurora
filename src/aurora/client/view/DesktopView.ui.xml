<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:topmenu="urn:import:aurora.client.view.topmenu"
             xmlns:sidebar="urn:import:aurora.client.view.sidebar">
    <ui:style>
        .eastPanel {
            background-color: #F60;
        }

        .westPanel {
            background-color: #EEE;
        }

        .northPanel {
            background-color: #ffcccc;
        }

        .southPanel {
            background-color: #99C;
        }

        .centerPanel {
            background-color: #FFC;
        }


    </ui:style>
    <g:DockLayoutPanel unit='EM'>
        <g:north size='5'>
            <topmenu:TopMenu styleName="{style.northPanel}"/>
        </g:north>

        <g:west size='20'>
            <sidebar:Sidebar styleName="{style.westPanel}"/>
        </g:west>

        <g:center>
            <g:FlowPanel styleName="{style.centerPanel}">
                <g:Label>This is the EDITOR panel</g:Label>
            </g:FlowPanel>
        </g:center>


    </g:DockLayoutPanel>
</ui:UiBinder>