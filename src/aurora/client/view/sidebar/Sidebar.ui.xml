<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:sidebar="urn:import:aurora.client.view.sidebar.components">

    <g:VerticalPanel>
        <!-- Standard Library-->
        <sidebar:library.StandardLibrary ui:field="stdlib"/>

        <!-- User Library-->
        <sidebar:library.UserLibrary ui:field="usrlib"/>

        <!-- Strategy -->

            <g:HorizontalPanel>
                <g:RadioButton ui:field="callByValue" name="strategyButton" value="callByValue" enabled="false">call by value</g:RadioButton>
                <g:RadioButton ui:field="normalOrder" name="strategyButton" value="normalOrder" enabled="true">normal order</g:RadioButton>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:RadioButton ui:field="callByName" name="strategyButton" value="callByName" enabled="false">call by name</g:RadioButton>
                <g:RadioButton ui:field="manualSelection" name="strategyButton" value="manualSelection" enabled="false">manual selection</g:RadioButton>
            </g:HorizontalPanel>


        <!-- Night Mode -->
        <g:HorizontalPanel>
            <span>Night Mode</span>
            <g:ToggleButton ui:field="nightModeSwitch"/>
        </g:HorizontalPanel>

        <!-- Language Selection and Share -->
        <g:HorizontalPanel>
            <sidebar:LanguageSelection/> <!-- Placeholder. Create own composite Widget or define here? -->
            <sidebar:Share/> <!-- Placeholder. Create own composite Widget or define here? -->
        </g:HorizontalPanel>

    </g:VerticalPanel>
</ui:UiBinder>