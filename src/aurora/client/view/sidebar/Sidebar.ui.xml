<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sidebar="urn:import:aurora.client.view.sidebar.components">


    <g:DockLayoutPanel>
        <g:center>
            <g:StackLayoutPanel unit="EM">
                <g:stack>
                    <g:header>Steps</g:header>
                    <g:Button>StepSettingSlider</g:Button>
                    <!-- Placeholder for Steps Widget -->
                </g:stack>

                <!-- Standard Library-->
                <g:stack>
                    <g:header size='3'>Standard Library</g:header>
                    <!--<sidebar:library.StandardLibrary ui:field="stdlib"/>-->
                    <g:Button>Stdlib Table</g:Button>
                </g:stack>

                <!-- User Library-->
                <g:stack>
                    <g:customHeader>
                        <g:HorizontalPanel>
                            <g:Label>User Library</g:Label>
                            <g:Button ui:field="addFunction">+</g:Button>
                        </g:HorizontalPanel>
                    </g:customHeader>
                    <!--<sidebar:library.UserLibrary ui:field="usrlib"/>-->
                    <g:Button>Usrlib Table</g:Button>
                </g:stack>


                <g:stack>
                    <g:customHeader>
                        <!-- Strategy -->
                        <sidebar:strategy.EvaluationStrategy ui:field="strategy"/>
                    </g:customHeader>

                    <g:Button>4 Strategies</g:Button>
                </g:stack>

            </g:StackLayoutPanel>
        </g:center>


        <g:south size="5">
            <g:VerticalPanel>
                <!-- Night Mode -->
                <g:HorizontalPanel>
                    <g:Label>Night Mode</g:Label>>
                    <g:ToggleButton ui:field="nightModeSwitch"/>
                </g:HorizontalPanel>

                <!-- Language Selection and Share -->
                <g:HorizontalPanel>
                    <!-- Placeholder. Create own composite Widget or define here? -->
                    <sidebar:Share/> <!-- Placeholder. Create own composite Widget or define here? -->
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:south>


    </g:DockLayoutPanel>
</ui:UiBinder>