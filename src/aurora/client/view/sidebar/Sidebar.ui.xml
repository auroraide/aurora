<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sidebar="urn:import:aurora.client.view.sidebar.components">


    <g:VerticalPanel>
        <g:StackLayoutPanel unit="PX">
            <!-- Standard Library-->
            <g:stack>
                <g:header size='3'>Standard Library</g:header>
                <sidebar:library.StandardLibrary ui:field="stdlib"/>
            </g:stack>

            <!-- User Library-->
            <g:stack>
                <g:header size="3">User Library</g:header>
                <sidebar:library.UserLibrary ui:field="usrlib"/>
            </g:stack>

        </g:StackLayoutPanel>
        
        <!-- Strategy -->
        <sidebar:strategy.EvaluationStrategy ui:field="strategy"/>


        <!-- Night Mode -->
        <g:HorizontalPanel>
            <span>Night Mode</span>
            <g:ToggleButton ui:field="nightModeSwitch"/>
        </g:HorizontalPanel>

        <!-- Language Selection and Share -->
        <g:HorizontalPanel>
            <!-- Placeholder. Create own composite Widget or define here? -->
            <sidebar:Share/> <!-- Placeholder. Create own composite Widget or define here? -->
        </g:HorizontalPanel>

    </g:VerticalPanel>
</ui:UiBinder>