<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:library="urn:import:aurora.client.view.sidebar.components.library"
             xmlns:strategy="urn:import:aurora.client.view.sidebar.components.strategy">

    <ui:style>
        .leftAlign {
            position: absolute;
            left: 0em;
        }

        .rightAlign {
            position: absolute;
            right: 0em;
        }

        .rightAlignButton {
            position: absolute;
            right: 0em;
            top: 0em;
        }
    </ui:style>

    <g:DockLayoutPanel unit="EM">
        <g:center>

            <g:DockLayoutPanel unit="EM">

                <g:north size="2.5">
                    <!-- Step Setting -->
                    <g:FlowPanel>
                        <g:Label addStyleNames="{style.leftAlign}">Steps</g:Label>
                        <g:TextBox ui:field="stepNumber" visibleLength="2" addStyleNames="{style.rightAlign}"/>
                    </g:FlowPanel>
                </g:north>

                <g:center>
                    <!-- Standard Library, User Library -->
                    <g:StackLayoutPanel>

                        <!-- Standard Library -->
                        <g:stack>
                            <g:customHeader size="40">
                                <g:FlowPanel>
                                    <!-- Placeholder for stdlib icon-->
                                    <g:Label addStyleNames="{style.leftAlign}">Icon</g:Label>
                                    <g:Label addStyleNames="{style.rightAlign}">Standard Library</g:Label>
                                </g:FlowPanel>
                            </g:customHeader>

                            <library:StandardLibraryTable/>
                        </g:stack>

                        <!-- User Library -->
                        <g:stack>
                            <g:customHeader size="70">
                                <g:FlowPanel>
                                    <g:Label>Icon</g:Label>
                                    <g:Label>User Library</g:Label>
                                    <g:Button ui:field="addFunction" addStyleNames="{style.rightAlignButton}">+
                                    </g:Button>
                                </g:FlowPanel>
                            </g:customHeader>

                            <library:UserLibraryTable/>
                        </g:stack>
                    </g:StackLayoutPanel>
                </g:center>

            </g:DockLayoutPanel>
        </g:center>

        <g:south size='10'>
            <g:HorizontalPanel>
                <!-- Strategy Selection -->
                <strategy:StrategySelection/>
                
                <!-- Night Mode -->
                <g:FlowPanel>
                    <g:Label>Night Mode</g:Label>
                    <g:ToggleButton ui:field="nightModeSwitch">On</g:ToggleButton>
                </g:FlowPanel>
                
                <!--Share and Language Button -->
                <g:FlowPanel>
                    <g:Button>Share</g:Button>
                    <g:Button>Language</g:Button>
                </g:FlowPanel>
                
                <g:ListBox ui:field="shareList">
                    <g:item value='latex'>LaTex</g:item>
                    <g:item value='email'>eMail</g:item>
                    <g:item value='link'>Link</g:item>
                </g:ListBox>
                <g:ListBox ui:field="languageList">
                    <g:item value='EN'>EN</g:item>
                    <g:item value='RU'>RU</g:item>
                    <g:item value='FR'>FR</g:item>
                    <g:item value='DE'>DE</g:item>
                </g:ListBox>
                <!-- language selection should load the list with available languages from properties files i18n -->
            </g:HorizontalPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>
