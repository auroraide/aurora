<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sidebar="urn:import:aurora.client.view.sidebar"
             xmlns:editor="urn:import:aurora.client.view.editor">
    <ui:style>
        .eastPanel {
            background-color: #F60;
        }

        .westPanel {
            background-color: #EEE;
        }

        .northPanel {
            background-color: #ffcccc;
        }

        .southPanel {
            background-color: #99C;
        }

        .centerPanel {
            background-color: #FFC;
        }


    </ui:style>

    <g:TabLayoutPanel barUnit='EM' barHeight="3">
        <!-- Aurora Tab -->
        <g:tab>

            <g:header size='7'><b>Aurora</b></g:header>
            <g:DockLayoutPanel unit="EM">

                <g:west size='20'>
                    <sidebar:Sidebar ui:field="sidebar" styleName="{style.westPanel}"/>
                </g:west>

                <g:center>
                    <editor:Editor ui:field="editor" styleName="{style.centerPanel}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:tab>

        <!-- TUTORIAL Tab-->
        <g:tab>
            <g:header size="7"><b>TUTORIAL</b></g:header>
            <g:HTMLPanel>
                <div>Ich bin ein TUTORIAL!</div>
            </g:HTMLPanel>
        </g:tab>


    </g:TabLayoutPanel>
</ui:UiBinder>