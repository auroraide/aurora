<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:editor="urn:import:aurora.client.view.editor.actionbar"
             ui:generateFormat='com.google.gwt.i18n.server.PropertyCatalogFactory'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">


    <g:SplitLayoutPanel>
        <!-- TODO: add title to input secion in editor (see GUI)-->
        <g:north size="120" unit="EM" addStyleNames="inputFieldUp">
            <g:DockLayoutPanel unit="EM" ui:field="inputDockLayoutPanel" addStyleNames="inputFieldCenter">
                <g:south size="2" addStyleNames="actionbar">
                    <!-- TODO: center actionbar and lock it to input/step border-->
                    <editor:ActionBar ui:field="actionBar"/>
                </g:south>
            </g:DockLayoutPanel>
        </g:north>

        <!--TODO: steps label overlay-->
        <g:center addStyleNames="stepFieldWindow">
            <g:ScrollPanel>
                <g:FlowPanel addStyleNames="stepFieldWindow">
                    <g:FlexTable ui:field="stepFieldTable" addStyleNames="stepFieldTable"/>
                </g:FlowPanel>
            </g:ScrollPanel>
        </g:center>

        <!-- TODO: output label overlay -->
        <g:south size="120" unit="EM" addStyleNames="outputFieldWindow">
            <g:DockLayoutPanel unit="EM" ui:field="outputDockLayoutPanel" addStyleNames="outputDockLayoutPanel">
                
            </g:DockLayoutPanel>
        </g:south>


    </g:SplitLayoutPanel>

</ui:UiBinder>
